<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Varepi - Profile</title>
  <link rel="stylesheet" href="/stylesheets/profile.css">

</head>

<body>
  <div class="profile-container">
    <!-- Profile Avatar -->
    <div class="profile-avatar">
      V
    </div>

    <!-- Profile Info -->
    <h1 class="profile-name">
      Varepi
      <!-- <svg class="lock-icon" viewBox="0 0 24 24" fill="currentColor">
        <path
          d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zM9 6c0-1.66 1.34-3 3-3s3 1.34 3 3v2H9V6z" />
      </svg> -->
    </h1>

    <div class="profile-handle">
      <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo"
        class="pinterest-logo" />
      <span>varepi4635</span>
    </div>

    <div class="profile-stats">
      0 following
    </div>

    <!-- Action Buttons -->
    <div class="profile-actions">
      <button class="btn btn-share">Share</button>
      <button class="btn btn-edit">Edit profile</button>
      <button class="btn btn-follow"><a href="/logout">Logout</a></button>
    </div>

    <!-- upload image -->
    <div class="upload">
      <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="text" name="filecaption" placeholder="Enter image caption">
        <input type="file" name="file">
        <button type="submit" class="btn">Upload</button>
      </form>
    </div>

    <!-- Content Area -->
    <!-- <div class="content-area"> -->
      <div class="cards" >
        <% user.posts.forEach(function(post){ %>
        <div class="image-card" style="width: 18rem;">
          <img src="/images/uploads/<%= post.image %>" alt="Sample Image" />
          <div class="card-content">
            <p><%= post.postText  %> </p>
          </div>
        </div>
        <% }) %>
      </div>
    <!-- </div> -->

  </div>
</body>

</html>