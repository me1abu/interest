<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pinterest Login</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <div class="modal-overlay">
        <div class="login-modal">
            <!-- <button class="close-btn" onclick="closeModal()">&times;</button> -->

            <!-- <div class="notification">
                <div class="info-icon">i</div>
                <div>
                    Facebook login is no longer available. Log in with an option below or <strong>tap to recover your account</strong>
                </div>
            </div> -->

            <div class="login-content">
                <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="pinterest-logo" />

                <h1 class="welcome-text">Login to your account</h1>

                <form id="loginForm" action="/login" method="post">
                    <div class="form-group">
                        <div class="input-container">
                            <input type="username" class="form-input" placeholder="Username" name="username" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-container">
                            <input type="password" class="form-input" placeholder="Password" name="password" required>
                            <span class="input-icon" onclick="togglePassword()">üëÅ</span>
                        </div>
                    </div>


                    <div class="forgot-password">
                        <a href="/forgot" onclick="forgotPassword()">Forgot your password?</a>
                    </div>

                    <button type="submit" class="login-btn">Login</button>
                </form>

                <div class="divider">OR</div>

                <button class="social-btn" onclick="googleLogin()">
                    <div class="google-icon"></div>
                    Continue with Google
                </button>

                <button class="social-btn" onclick="qrLogin()">
                    <div class="qr-icon"></div>
                    Use QR code
                </button>

                <div class="terms-text">
                    By continuing, you agree to Pinterest's <a href="#">Terms of Service</a> and acknowledge you've read
                    our <a href="#">Privacy Policy</a>. Notice at collection.
                </div>

                <div class="signup-section">
                    <span>Not on Pinterest yet? <a href="/" onclick="signUp()">Sign up</a></span>
                </div>

                <div class="business-section">
                    <span>Are you a business? <a href="#" onclick="businessSignup()">Get started here!</a></span>
                </div>
            </div>
        </div>
    </div>

    <script>
        function closeModal() {
            alert('Close button clicked!');
        }

        function togglePassword() {
            const passwordInput = document.querySelector('input[type="password"], input[type="text"]');
            const icon = event.target;

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.textContent = 'üôà';
            } else {
                passwordInput.type = 'password';
                icon.textContent = 'üëÅ';
            }
        }
    </script>
</body>

</html>