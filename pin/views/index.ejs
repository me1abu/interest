
<%- include('./partials/header') %>

  <div class="w-full bg-zinc-100 flex justify-center items-center h-screen">
    <!-- <div class="w-[23vw] h-[60vh] bg-white rounded-2xl flex flex-col justify-center items-center box-border"> -->
    <div class="w-[23vw] h-[60vh] text-center bg-white rounded-2xl box-border p-10">
      <div class="logo">P</div>
      <div class="font-bold text-2xl text-gray-800 ">Welcome to Pinterest</div>
      <form action="">
      <div class="flex flex-col items-start m-1 ">
        <p class="ml-2 text">Email</p>
        <input type="email" name="email" placeholder="Email" class="w-full h-9 border rounded-xl border-gray-400 p-3 focus:border-blue-600 focus:outline-none focus:border-2">
      </div>
      <div class="flex flex-col items-start m-1">
        <p class="ml-2 text">Password</p>
        <input type="password" name="password" placeholder="Password" class="w-full h-9 border rounded-xl border-gray-400 p-3 focus:border-blue-600 focus:outline-none focus:border-2">
      </div>
      <div class="flex items-start m-1">
        <a href="
          #"><p class="text-blue-600 font-semibold hover:underline">Forgot your password</p></a>
      </div>
      <div class="w-full border rounded-xl p-1 bg-red-600 text-white">
        <button>Log in</button>
      </div>
      <div class="or">
        <p>OR</p>
      </div>

      <div class="flex flex-col items-start m-1">
        <div class="w-full h-9 border rounded-md flex justify-center items-center">
          <p>Continue with Google</p>
        </div>
        <div class="qr-login">
          <p>Use QR Code</p>
        </div>
      </div>
      <div class="text-xs text-wrap text-gray-500 ">
        <p class="text-wrap">By continuing you agree to Pinterest terms and conditions</p>
      </div>
      <div class="signup">
        <p>Don't have an account? <span>Sign up</span></p>
      </div>
      </form>
    </div>

  </div>

<%- include('./partials/footer') %>
  

